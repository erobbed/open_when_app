<!DOCTYPE html>
<html>
  <head>
    <title>Open When...</title>
    <%= stylesheet_link_tag    "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= analytics_init if Rails.env.production? %>
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet"></link>
  </head>
  <body>
    <div class="row">

    <!--  navbar -->
      <nav class="navbar navbar-inverse">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          </div>
          <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
              <li class="active"><a href="<%= home_path %>">OpenWhen</a></li>
                  <% if logged_in? %>
                  <ul class="nav navbar-nav navbar-right">
                     <li><%= link_to "Account", user_path(current_user)%> </li>
                     <li><%= link_to "All the Feels", analytics_path%> </li>
                     <li><%= link_to('Log Out', logout_path, method: 'DELETE') %></li>
                  </ul>
                 <% else %>
                 <ul class="nav navbar-nav navbar-right">
                    <li><a href="<%=new_user_path%>"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
                    <li><a href="<%=login_path%>"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
                </ul>
                <% end %>
              </li>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </nav>
    </div>
    <!-- content -->
    <div class="row">
      <div class="container">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
