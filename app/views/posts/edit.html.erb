<%= form_for @post do |f| %>
  <%=f.hidden_field :sender_id %><br>
  <%=f.hidden_field :recipient_id %><br>

  <%= f.label :title %>
  <%= f.text_field :title %><br>
  <%= f.label :content %><br>
  <%= f.text_area :content %><br>
  <%= f.label :category %>
  <%= f.select :category_id, Category.all.map {|c| [c.name, c.id]} %><br>
  <%=f.fields_for :tags do |tag| %>
    <%= tag.label :tag %>
    <%= tag.text_field :name %><br>
  <% end %>
  <%= f.submit "Edit this OpenWhen", class: 'btn btn-large btn-primary' %>
<% end %>
