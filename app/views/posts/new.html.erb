

<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>
  <%= f.label :content %><br>
  <%= f.text_area :content %><br>
  <%= f.label :category %>
  <%= f.select :category_id, Category.all.map {|c| [c.name, c.id]} %><br>
  <%=f.fields_for :tags do |tag| %>
    <%= tag.label :tag %>
    <%= tag.text_field :name %><br>
  <% end %>
  <%= f.label :recipient %>
  <%= f.text_field :recipient %><br>
  <%= f.label :recipient_email %>
  <%= f.text_field :recipient_email %><br>
  <%= f.submit "Send an OpenWhen" %>
<% end %>
